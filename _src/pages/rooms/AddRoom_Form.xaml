<Window x:Class="TechInventory._src.pages.rooms.AddRoom_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechInventory._src.pages.rooms"
        mc:Ignorable="d"
        Title="Добавление новой аудитории" Height="218" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#262537" >
        <StackPanel Margin="10">
            <Label Content="Номер аудитории" Foreground="White" FontWeight="Bold" FontFamily="Segoe UI Black"/>
            <TextBox x:Name="txtRoomNumber" Margin="0,0,0,10" FontFamily="Segoe UI Black"/>

            <Label Content="Название" Foreground="White" FontWeight="Bold" FontFamily="Segoe UI Black"/>
            <TextBox x:Name="txtDescription"  Margin="0,0,0,10" FontFamily="Segoe UI Black"/>

            <Button x:Name="AddRoomForm"  Content="Добавить\Очистить" Width="130" Height="30" Click="AddRoomFormButton_Click" FontWeight="Bold" MouseRightButtonUp="AddRoomFormButton_MouseRightButtonUp" FontFamily="Segoe UI Black"/>

            <Label Content="*ЛКМ - Добавить\ПКМ - очистить" Margin="0,7,0,0" Foreground="White" FontSize="9" FontWeight="Bold" FontFamily="Segoe UI Black"/>
        </StackPanel>
    </Grid>
</Window>
