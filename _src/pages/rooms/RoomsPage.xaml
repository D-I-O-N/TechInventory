<Page x:Class="TechInventory._src.pages.rooms.RoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechInventory._src.pages.rooms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomsPage" Loaded="Page_Loaded" >

    <Grid>
        <!-- Ваше боковое меню с кнопками -->
        <StackPanel Background="#FF2C3E50">
            <!-- ... Ваши кнопки ... -->
        </StackPanel>

        <!-- Основное содержимое страницы -->
        <StackPanel>
            <!-- Заголовок страницы -->
            <TextBlock Text="Управление кабинетами" Margin="10" FontSize="20" FontWeight="Bold"      
               Foreground="White"
               TextWrapping="Wrap"
               LineHeight="1.5" HorizontalAlignment="Center" />

            <!-- Список кабинетов -->
            <DataGrid x:Name="dataGridView1" Height="156">
            </DataGrid>

            <!-- Кнопки для действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Добавить кабинет" FontWeight="Bold" FontSize="18" Height="44" Width="175" Margin="5" Click="AddCabinet_Click"/>
                <Button Content="Редактировать" FontWeight="Bold" FontSize="18" Height="44" Width="175" Margin="5" Click="EditCabinet_Click"/>
                <Button Content="Удалить" FontWeight="Bold" FontSize="18" Height="44" Width="175" Margin="5" Click="DeleteCabinet_Click"/>
            </StackPanel>

            <!-- Текущая запись -->
            <StackPanel Background="White" Height="148" >
                <TextBlock TextAlignment="Center" Text="Выбранная запись о кабинете"
                   FontSize="18"
                   Foreground="Black"
                   TextWrapping="Wrap"
                   LineHeight="1.5" FontWeight="Bold" Width="276" Margin="0,5,0,10"/>
                <StackPanel Margin="0,0,0,0" Orientation="Horizontal" Width="470" >
                    <StackPanel Orientation="Vertical" Width="129" >
                        <TextBlock Margin="5" TextAlignment="Right" FontSize="12" Text="ID" Width="119"/>
                        <TextBlock Margin="5" TextAlignment="Right" FontSize="12" Text="Room Number" Width="119"/>
                        <TextBlock Margin="5" TextAlignment="Right" FontSize="12" Text="Description" Width="119"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBox Margin="5" Width="233"/>
                        <TextBox Margin="5" Width="233"/>
                        <TextBox Margin="5" Width="233"/>
                    </StackPanel>


                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
